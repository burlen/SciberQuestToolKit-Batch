<?xml version="1.0"?>
<SmoothBatch>

  <vtkSQBOVReader
      cb_enable="1"
      ISubset="-1 -1"
      JSubset="-1 -1"
      KSubset="-1 -1">
       <arrays> b </arrays>
  </vtkSQBOVReader>


  <!--
  One can use either median filter, or the
  kernel convolution. Comment out the unused
  tag.
  -->
  <!--
  <vtkSQMedianFilter stencilWidth="9" />
  -->

  <!--
  kernel convolution options:

  kernel types:
    Gaussian=0
    Log Of Gaussian=1
    Constant=2

  memory types:
    gloabl=0
    constant=1
    texture=2
  -->
  <vtkSQKernelConvolution
      stencilWidth="13"
      kernelType="0"
      CPUDriverOptimization="1"
      numberOfMPIRanksToUseCUDA="0"
      numberOfActiveCUDADevices="0"
      numberOfWarpsPerCUDABlock="8"
      inputCUDAMemoryType="2"
      kernelCUDAMemoryType="0"/>

  <vtkSQBOVWriter
      cb_enable="1"
      cb_buffer_size="1073741824"
      stripe_count="160"/>

</SmoothBatch>
